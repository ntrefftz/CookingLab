<h1>Acceso al sistema</h1>
<form action="/usuarios/login" method="POST">
<fieldset>
	<% if (locals.error) { %>
		<p><strong><%= locals.error %></strong></p>
	<% } %>
	<legend>Usuario y contraseña</legend>
	<div><label>Nombre:</label> <input type="text" name="username" /><%- helpers.error(errores, 'username') %></div>
	<div><label>Contraseña:</label> <input type="password" name="password" /><%- helpers.error(errores, 'password') %></div>
	<button type="submit">Enviar</button>
</fieldset>

<a href="/usuarios/register">¿Aun no te has registrado? Pincha aquí.</a>


