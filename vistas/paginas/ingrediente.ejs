<h1>Ingredientes</h1>
<% if (session.esAdmin) { %>
<a href="/recetas/ingredienteInd/aniadir"><button>Añadir ingrediente</button></a>
<% } %>

<div id="catalogo" class="cards_container_tall">
    <% ingredientes.forEach(ingredienteInd => { %>
        <article class="card">
            <img src=<%= ingredienteInd.imagen_url %> alt="Pronto habrá una foto"  />
            <p></p>
            <a href="ingredienteInd/?id=<%= ingredienteInd.id %>">
                <h4><%= ingredienteInd.nombre %></h4>
            </a>
            <p>Precio: <%= ingredienteInd.precio %> €</p>  
        </article>
        <% }) %>
</div>



