<div id="catalogo" class="form">
    <form action="/recetas/ingredienteInd/modificar?id=<%= ingredientes.id %>" method="POST">
        <fieldset>
            <% if (locals.error) { %>
                <p><strong><%= locals.error %></strong></p>
            <% } %>
            <legend>Editar receta</legend>
            <div><label>Nombre:</label> <input type="text" name="nombre" value="<%= ingredientes.nombre %>" /></div>
            <div><label>Categor√≠a:</label> <textarea name="categoria"><%= ingredientes.categoria %></textarea></div>
            <div><label>Precio:</label><input type="number" name="precio" required placeholder="Precio" min="0" /></div>
            <div><label>Stock:</label> <input type="number" name="stock" required placeholder="Stock" min="0" /></div>


            <div>
                <label>Unidad de medida:</label>
                <select name="unidad_medida" required>
                    <option value="">Selecciona una unidad</option>
                    <option value="gramos">Gramos</option>
                    <option value="mililitros">Mililitros</option>
                    <option value="unidades">Unidades</option>
                </select>
            </div>
            
            <button type="submit">Editar</button>
        </fieldset>
    </form>
</div>